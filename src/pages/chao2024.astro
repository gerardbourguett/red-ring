---
import { Button, Link } from "@nextui-org/react";
import Countdown from "../components/react/Countdown";
import Layout from "../layouts/Layout.astro";
import { CURRENT_YEAR } from "../data/constants";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Bye Bye 2024">
  <Header />
  <main class="min-h-screen">
    <!-- Add a placeholder for the Twitch embed -->
    <div class="grid grid-rows-2 gap-4 mb-8">
      <div
        class="bg-zinc-900/50 rounded-2xl p-4 backdrop-blur-sm border border-zinc-800/50 shadow-xl"
      >
        <div class="aspect-video relative overflow-hidden rounded-xl">
          <div id="twitch-embed" class="w-full h-full">
            <iframe
              src="https://player.twitch.tv/?channel=vanderfondi&parent=www.nye.today"
              frameborder="0"
              allowfullscreen="true"
              scrolling="no"
              class="w-full h-full"></iframe>
          </div>
        </div>
        <div class="mt-4 flex items-center justify-between p-2">
          <div class="flex items-center gap-3">
            <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
            <span class="text-zinc-300 font-medium">Live Now</span>
          </div>
          <Button size="sm" className="bg-purple-600 text-white">
            <Link href="https://twitch.tv/vanderfondi" target="_blank"
              >Watch on Twitch</Link
            >
          </Button>
        </div>
      </div>

      <div class="text-center space-y-12 px-4 animate-fade-in">
        <div class="max-w-4xl mx-auto">
          <Countdown client:load />
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }
</style>

<!-- Load the Twitch embed script -->
<script src="https://player.twitch.tv/js/embed/v1.js"></script>

<!-- Create a Twitch.Player object. This will render within the placeholder div -->
<script type="text/javascript">
  new Twitch.Player("twitch-embed", {
    channel: "vanderfondi",
  });
</script>
