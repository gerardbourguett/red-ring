---
import { Button } from "@nextui-org/react";
import NyeEvents from "../components/react/NyeEvents";
import Layout from "../layouts/Layout.astro";
import { CURRENT_YEAR } from "../data/constants";
import { supabase } from "../lib/supabase";

const { data, error } = await supabase.from("timezones").select("*");
---

<Layout title="LIVE">
  <div class="container mx-auto px-4">
    <h1 class="text-6xl md:text-7xl font-medium tracking-tight text-center">
      #RoadTo<span class="text-red-600">2025</span>
    </h1>

    <div class="mt-16">
      <NyeEvents events={data ?? []} client:load />
    </div>

    <Button
      color="default"
      variant="shadow"
      size="lg"
      className="text-xl hover:scale-105 transition-transform"
    >
      <a href="/">#{CURRENT_YEAR + 1}Live</a>
    </Button>
  </div>
</Layout>
