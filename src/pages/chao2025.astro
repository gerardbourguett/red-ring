---
import { Button } from "@nextui-org/react";
import Countdown from "../components/react/Countdown";
import Layout from "../layouts/Layout.astro";
import { CURRENT_YEAR } from "../data/constants";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Bye Bye 2024">
  <Header />
  <main class="min-h-screen bg-gradient-to-b">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-6xl mx-auto space-y-12">
        <!-- Hero Section -->
        <div class="text-center space-y-6 animate-fade-in">
          <h1
            class="text-6xl md:text-8xl font-bold tracking-tighter bg-gradient-to-r from-red-500 to-red-600 bg-clip-text text-transparent"
          >
            #Chao{CURRENT_YEAR}
          </h1>
          <p class="text-xl text-zinc-400">
            Join us for the final countdown and celebration
          </p>
        </div>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Twitch Stream Section -->
          <div
            class="bg-zinc-900/50 rounded-2xl p-4 backdrop-blur-sm border border-zinc-800/50 shadow-xl"
          >
            <div class="aspect-video relative overflow-hidden rounded-xl">
              <div id="twitch-embed" class="w-full h-full">
                <iframe
                  src="https://player.twitch.tv/?channel=vanderfondi&parent=www.nye.today"
                  frameborder="0"
                  allowfullscreen="true"
                  scrolling="no"
                  class="w-full h-full"></iframe>
              </div>
            </div>
            <div class="mt-4 flex items-center justify-between p-2">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse">
                </div>
                <span class="text-zinc-300 font-medium">Live Now</span>
              </div>
              <Button
                size="sm"
                className="bg-purple-600 text-white"
                href="https://twitch.tv/vanderfondi"
                target="_blank"
              >
                Watch on Twitch
              </Button>
            </div>
          </div>

          <!-- Countdown Section -->
          <div
            class="bg-zinc-900/50 rounded-2xl p-8 backdrop-blur-sm border border-zinc-800/50 shadow-xl flex items-center justify-center"
          >
            <div class="w-full">
              <h2 class="text-2xl font-semibold text-zinc-200 text-center mb-8">
                Time Remaining
              </h2>
              <Countdown client:load />
            </div>
          </div>
        </div>

        <!-- Additional Content -->
        <div class="text-center space-y-4">
          <p class="text-zinc-400">
            Share your celebration moments with
            <span class="text-red-500 font-semibold">#{CURRENT_YEAR}</span>
          </p>
          <div class="flex justify-center gap-4">
            <Button
              size="lg"
              className="bg-gradient-to-r from-red-500 to-red-600 text-white font-medium"
            >
              Join the Celebration
            </Button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>

<script src="https://player.twitch.tv/js/embed/v1.js"></script>

<script type="text/javascript">
  new Twitch.Player("twitch-embed", {
    channel: "vanderfondi",
    width: "100%",
    height: "100%",
  });
</script>
