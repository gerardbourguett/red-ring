---
import { Button } from "@nextui-org/react";
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";
import StreamGrid from "./react/StreamGrid";
import { CURRENT_YEAR } from "../data/constants";
const { data, error } = await supabase.from("live").select("*");
---

<Layout title=`#${CURRENT_YEAR + 1}Live | Livestreams`>
  <main>
    <StreamGrid events={data ?? []} client:load />
    <Button
      color="default"
      variant="shadow"
      size="lg"
      className="text-xl hover:scale-105 transition-transform"
    >
      <a href="/">#{CURRENT_YEAR + 1}Live</a>
    </Button>
  </main>
</Layout>
