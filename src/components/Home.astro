---
import { Button } from "@nextui-org/react";
import TimeProgress from "./react/TimeProgress";
import Footer from "./Footer.astro";
import { CURRENT_YEAR } from "../data/constants";
import Map from "./Map.astro";
---

<main
  class="flex min-h-[calc(100vh-4rem)] flex-col items-center justify-center space-y-8 sm:space-y-12"
>
  <Map />
  <div class="text-center space-y-10 sm:space-y-16">
    <h1 class="text-5xl sm:text-6xl md:text-8xl font-medium tracking-tighter">
      #{CURRENT_YEAR + 1}<span class="text-red-500">Live</span>
    </h1>

    <div class="w-full max-w-md sm:max-w-lg mx-auto px-4">
      <TimeProgress client:load />
    </div>

    <div class="flex flex-col items-center gap-6 sm:gap-8">
      <Button
        color="danger"
        variant="shadow"
        size="lg"
        className="text-lg sm:text-xl hover:scale-105 transition-transform"
      >
        <a href="/chao2024">Dec 31, {CURRENT_YEAR} 10:00 UTC</a>
      </Button>
    </div>
  </div>
  <Footer />
</main>
